<!doctype html>
<html>
<head>
    <title>Basketball Training Form</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/4f3c245195.js" crossorigin="anonymous"></script>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/coachList"  class="btn btn-default btn-sm">Coach List</a>
    </div>

    <div >

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6 hide" style="display:none">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div>
          <section>
            <h3>Workouts</h3>
            <form method="POST" action="/completedWorkouts">
            <table style="border: 1px solid black;">
                <thead>
                    <tr>
                        <th style="border: 1px solid black;">Title</th>
                        <th style="border: 1px solid black;">Level</th>
                        <th style="border: 1px solid black;">Description</th>
                        <th style="border: 1px solid black;">Sport</th>
                        <th style="border: 1px solid black;">Log</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<workout.length; i++) {%>
                    <tr>
                        <td style="border: 1px solid black;"><%= workout[i].title %></td>
                        <td style="border: 1px solid black;"><%= workout[i].level %></td>
                        <td style="border: 1px solid black;"><%= workout[i].description %></td>
                        <td style="border: 1px solid black;"><%= workout[i].sport %></td>
                        <td style="border: 1px solid black;"><input type="text" name="completed:<%= workout[i]._id %>"></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
          </form>
        </section>
        
          
          

         
            
</div>

<script src="main.js"></script>

</body>
</html>
