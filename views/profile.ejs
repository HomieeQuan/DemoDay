        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6 hide" style="display:none">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
                
            <h2>Log your Drills</h2>
                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="container">
            <section>
              <h3 class="text-primary">Log your Workouts</h3>
              <div class="journal">
                <form action="completedWorkouts" method="post" enctype="multipart/form-data">
                <% for(var i=0; i<workout.length; i++) { %>
                  <div class="journal-entry bg-white p-4 mb-4">
                    <h3 class="text-primary"><%= workout[i].title %></h3>
                    <p><strong>Level:</strong> <%= workout[i].level %></p>
                    <p><strong>Description:</strong> <%= workout[i].description %></p>
                    <p><strong>Sport:</strong> <%= workout[i].sport %></p>
                    <input type="hidden" name="title:<%= workout[i]._id %>" value="<%= workout[i].title %>">
                    <div class="log-section">
                      <label for="completed<%= workout[i]._id %>" class="form-label">Log:</label>
                      <input type="text" id="completed<%= workout[i]._id %>" name="completed:<%= workout[i]._id %>" placeholder="Enter the number of times you did this drill" class="form-control form-control-sm">
                    </div>
                    <div class="file-section mt-3">
                      <label for="files<%= workout[i]._id %>" class="form-label">File:</label>
                      <div class="input-group">
                        <input type="file" id="files<%= workout[i]._id %>" name="files"  class="form-control fileUpload" >
                        <label class="input-group-text" for="files<%= workout[i]._id %>">Choose File</label>
                        <input type="hidden" name="fileName:<%= workout[i]._id %>" >
                      </div>    
                    </div>
                  </div>
                <% } %>
                <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>
            </section>
          </div>
          

          
          
<script src="upload.js"></script>


</body>
